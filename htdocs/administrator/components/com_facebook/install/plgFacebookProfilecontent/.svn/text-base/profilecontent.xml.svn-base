<!DOCTYPE install PUBLIC "-//Joomla! 1.5//DTD plugin 1.0//EN" "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install version="1.5" type="plugin" group="facebook">
	<name>Facebook - Profile Content</name>	<creationDate>$LastChangedDate$</creationDate>
	<author>Witchakorn Kamolpornwijit</author>
	<authorEmail>chalet16@gmail.com</authorEmail>
	<authorUrl>whyworldhot.com</authorUrl>
	<copyright>(C) 2007 Witchakorn Kamolpornwijit. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>0.10</version>
	<description>Display Latest article in Facebook profile.</description>
	<files>
		<filename plugin="profilecontent">profilecontent.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_facebook_profilecontent.ini</language>
		<language tag="th-TH">th-TH.plg_facebook_profilecontent.ini</language>
	</languages> 
	<params>
		<param name="num" type="text" default="5" label="PARAMLBLNUM" description="PARAMDESNUM" />
		<param name="ismax" type="list" default="1" label="PARAMLBLISMAX" description="PARAMDESISMAX">
			<option value="0">PARAMVALLOCK</option>
			<option value="1">PARAMVALMAX</option>
		</param>
	</params>

</install>
